@model List<Bookly.Models.Publicacion>

@{
    ViewData["Title"] = "Perfil de usuario";
}

<h1>@ViewBag.usuario.nombreComp</h1>
<a href="@Url.Action("Publicar", "Book")">Publicar</a>
<a href="@Url.Action("Logout", "Usuarios")">Cerrar sesi√≥n</a>

<section class="personalInfo">
    <div class="userContainer">
        <h2>@ViewBag.usuario.nombreComp</h2>
        <p>@ViewBag.usuario.curso</p>
        <p>@ViewBag.usuario.especialidad</p>
    </div>

    <section class="recommendationsContainer mt-5">
        <h2>Mis publicaciones</h2>

        @if (ViewBag.Mensaje != null)
        {
            <p class="text-muted">@ViewBag.Mensaje</p>
        }
        else
        {
            <div class="row">
                @foreach (Publicacion pub in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100">
                            <img src="~/img/toldot.jpg" class="card-img-top" alt="@pub.descripcion">
                            <div class="card-body">
                                <h5 class="card-title">@pub.descripcion</h5>
                                <p class="card-text">
                                    <strong>Estado:</strong> @pub.estadoLibro <br />
                                    <strong>Precio:</strong> $@pub.precio <br />
                                    <strong>Fecha:</strong> @pub.fecha.ToShortDateString()
                                </p>
                                <div class="d-flex justify-content-between">
                                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@pub.id" class="btn btn-warning btn-sm">Editar</a>
                                    <form asp-controller="Book" asp-action="Eliminar" asp-route-id="@pub.id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>
</section>
