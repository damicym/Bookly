@model List<Bookly.Models.PublicacionesCompletas>
@using Bookly.Helpers

@{
    ViewData["Title"] = "Perfil";
}

<section class="profileInfo">
    <section class="profileId">
        <img src="~/images.jfif" alt="pfp">
        <div>
            <h1 class="nombreCompleto">@HtmlHelpers.ToUpperPrimeraLetra(ViewBag.usuario.nombreComp)</h1>
            <h2 class="aboutMe">@ViewBag.usuario.aboutMe</h2>
        </div>
    </section>
    <section class="profileStats">
        <p class="statsPill">@($"{HtmlHelpers.PasarAñoATexto(ViewBag.usuario.ano)} {ViewBag.usuario.especialidad} {ViewBag.usuario.curso} ")</p>
            <p class="statsPill">Sin ventas cerradas</p>
            @if (Model.Count == 1)
            {
                <p class="statsPill">@Model.Count Publicación</p>
            } else{
                <p class="statsPill">@Model.Count Publicaciones</p>
            }
    </section>
    <button class="logoutBtn" onclick="window.location.href='@Url.Action("Logout", "Usuarios")'">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-logout-2"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 8v-2a2 2 0 0 1 2 -2h7a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-7a2 2 0 0 1 -2 -2v-2" /><path d="M15 12h-12l3 -3" /><path d="M6 15l-3 -3" /></svg>
        Cerrar Sesión
    </button>

</section>
<section class="publicaciones">
    <div class="publicacionesEnProfileTitulo">
        <h1>Publicaciones</h1>
        <button class="mainBtn" onclick="window.location.href='@Url.Action("Publicar", "Book")'">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-square-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 12h6" /><path d="M12 9v6" /><path d="M3 5a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-14z" /></svg>
            Publicar un libro
        </button>
    </div>
    <section class="cardsPublicadas">
        @if (Model == null || Model.Count == 0)
        {
            <div class="no-result">
                <p>Este usuario aún no tiene publicaciones.</p>
            </div>
        }
        else
        {
            foreach (PublicacionesCompletas libro in Model)
            {
                <div class="libro" onclick="window.location.href='@Url.Action("Detalle", "Book", new { id = libro.id })'">
                    <div class="libroImgContainer">
                        @if (libro.imagen != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(libro.imagen)" alt="imagen del libro" />
                        }
                        else
                        {
                            <img src="~/img/book-placeholder.webp" alt="imagen del libro" />
                        }
                        <section class="libroActionsContainer">
                            <form 
                            class="desearBtnForm" 
                            action="@Url.Action("Editar", "Book")" 
                            method="get" 
                            style="display:inline;">
                                <input type="hidden" name="id" value="@libro.id" />
                                <button type="submit" title="Editar publicación" onclick="event.stopPropagation();">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-edit"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" /><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" /><path d="M16 5l3 3" /></svg>
                                </button>
                            </form>
                            <form 
                            class="desearBtnForm" 
                            action="@Url.Action("Eliminar", "Book")" 
                            method="post" 
                            onsubmit="return confirm('¿Seguro que quieres eliminar esta publicación?');"
                            style="display:inline;">
                                <input type="hidden" name="id" value="@libro.id" />
                                <button type="submit" title="Eliminar publicación" onclick="event.stopPropagation();">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 7l16 0" /><path d="M10 11l0 6" /><path d="M14 11l0 6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
                                </button>
                            </form>
                        </section>
                    </div>
                    <h1>@HtmlHelpers.ToUpperPrimeraLetra(libro.nombre)</h1>
                    <h2>$@libro.precio</h2>
                    <div class="pillContainer">
                        <span class="pill">@libro.estadoLibro</span>
                        <span class="pill">@HtmlHelpers.ToUpperPrimeraLetra(libro.materia)</span>
                        <span class="pill">@HtmlHelpers.PasarAñoATexto(int.Parse(libro.ano))</span>
                    </div>
                </div>
            }
        }
    </section>
</section>