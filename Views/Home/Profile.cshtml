@model List<Bookly.Models.Libros>

@{
    ViewData["Title"] = "Perfil de usuario";
}

<h1>@ViewBag.UsuarioNombre</h1>
<a href="@Url.Action("Publicar", "Book")">Publicar</a>
<a href="@Url.Action("Logout", "Usuarios")">Cerrar sesión</a>

<section class="personalInfo">
    <div class="userContainer">
        <img src="@Bookly.Models.BD.UsuarioLogueado?.foto" alt="foto perfil" />
        <h2>@Bookly.Models.BD.UsuarioLogueado?.nombreComp</h2>
        <p>@Bookly.Models.BD.UsuarioLogueado?.curso</p>
        <p>@Bookly.Models.BD.UsuarioLogueado?.especialidad</p>
    </div>

    <section class="recommendationsContainer mt-5">
        <h2>Mis publicaciones</h2>

        @if (ViewBag.Mensaje != null)
        {
            <p class="text-muted">@ViewBag.Mensaje</p>
        }
        else
        {
            <div class="row">
                @foreach (var libro in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100">
                            <img src="~/img/toldot.jpg" class="card-img-top" alt="@libro.nombre">
                            <div class="card-body">
                                <h5 class="card-title">@libro.nombre</h5>
                                <p class="card-text">
                                    <strong>Materia:</strong> @libro.materia <br />
                                    <strong>Año:</strong> @libro.ano <br />
                                    <strong>Editorial:</strong> @libro.editorial
                                </p>
                                <div class="d-flex justify-content-between">
                                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@libro.id" class="btn btn-warning btn-sm">Editar</a>
                                    <form asp-controller="Book" asp-action="Eliminar" asp-route-id="@libro.id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>
</section>
