@{
    ViewData["Title"] = "Publicar";
}

<section class="formSection">
    <form action="@Url.Action("Publicar", "Book")" method="post">
        <div class="campo">
            <label for="nombre">Nombre del libro</label>
            <input type="text" id="nombre" name="nombre" placeholder="Toldot Israel 3" />
        </div>

        <div class="campo">
            <label for="materia">Materia</label>
            <input type="text" id="materia" name="materia" placeholder="Historia judía" />
        </div>

        <div class="campo">
            <label for="ano">Nivel escolar</label>
            <select id="ano" name="ano">
                <option value="">-- Selecciona un año escolar --</option>
                <option value="7mo grado">7mo grado</option>
                <option value="1er año">1er año</option>
                <option value="2do año">2do año</option>
                <option value="3er año">3er año</option>
                <option value="4to año">4to año</option>
                <option value="5to año">5to año</option>
            </select>
        </div>

        <div class="campo">
            <label for="editorial">Editorial</label>
            <input type="text" id="editorial" name="editorial" placeholder="Editorial ORT" />
        </div>

        <div class="campo">
            <label for="estado">Estado</label>
            <select id="estado" name="estado">
                <option value="">-- Selecciona un estado --</option>
                <option value="Como nuevo">Como nuevo</option>
                <option value="Con algunas anotaciones">Con algunas anotaciones</option>
                <option value="Con muchas anotaciones">Con muchas anotaciones</option>
                <option value="Muy usado">Muy usado</option>
            </select>
        </div>

        <div class="campo">
            <label for="precio">Precio</label>
            <input type="number" id="precio" name="precio" placeholder="0.00" step="0.01" />
        </div>

        <div class="campo">
            <label for="descripcion">Descripción</label>
            <textarea id="descripcion" name="descripcion" placeholder="Agregar una descripción del libro..." rows="4"></textarea>
        </div>

        <button type="submit">Publicar</button>
    </form>
</section>
