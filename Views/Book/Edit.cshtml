@model Bookly.Models.Libros

@{
    ViewData["Title"] = "Editar libro";
}

<section class="formSection">
    <h2>Editar libro</h2>

    <form action="@Url.Action("Edit", "Book")" method="post">
        <input type="hidden" name="id" value="@Model.id" />

        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" value="@Model.nombre" required />
        </div>

        <div class="campo">
            <label for="materia">Materia</label>
            <input type="text" id="materia" name="materia" value="@Model.materia" required />
        </div>

        <div class="campo">
            <label for="ano">Nivel escolar</label>
            <select id="ano" name="ano" required>
                <option value="@Model.ano">@Model.ano</option>
                <option value="7mo grado">7mo grado</option>
                <option value="1er año">1er año</option>
                <option value="2do año">2do año</option>
                <option value="3er año">3er año</option>
                <option value="4to año">4to año</option>
                <option value="5to año">5to año</option>
            </select>
        </div>

        <div class="campo">
            <label for="editorial">Editorial</label>
            <input type="text" id="editorial" name="editorial" value="@Model.editorial" required />
        </div>

        <div class="campo">
            <label for="estadoLibro">Estado</label>
            <select id="estadoLibro" name="estadoLibro" required>
                <option value="">-- Selecciona un estado --</option>
                <option value="Como nuevo">Como nuevo</option>
                <option value="Con algunas anotaciones">Con algunas anotaciones</option>
                <option value="Con muchas anotaciones">Con muchas anotaciones</option>
                <option value="Muy usado">Muy usado</option>
            </select>
        </div>

        <div class="campo">
            <label for="precio">Precio</label>
            <input type="number" id="precio" name="precio" step="0.01" placeholder="0.00" required />
        </div>

        <div class="campo">
            <label for="descripcion">Descripción</label>
            <textarea id="descripcion" name="descripcion" placeholder="Agregar una descripción del libro..." rows="4"></textarea>
        </div>

        <button type="submit">Guardar cambios</button>
    </form>
</section>
