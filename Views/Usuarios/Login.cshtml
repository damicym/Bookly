@{
    ViewBag.Title = "Login";
}
<div class="loginPage primerElemento">
    <section class="formSection">
        <h1>Iniciar Sesión</h1>

        @if (ViewBag.Error != null)
        {
            <p class ="error"> @ViewBag.Error </p>
        }

        <form method="post" action="@Url.Action("Login", "Usuarios")">
            <input type="hidden" name="returnView" value="@ViewBag.returnView" />
            <div class="campo">
                <label>DNI</label>
                <input placeholder="DNI" type="text" name="DNI" id="DNI" required autocomplete="off" autofocus/>
            </div>
            <div class="campo">
                <label>Contraseña</label>
                <input placeholder="Contraseña" type="password" name="password" id="password" required /><br/>
            </div>
            <button type="submit" class="mainBtn">Iniciar sesión</button>
        </form>
        <p>
            ¿No tienes cuenta? <a href="@Url.Action("Register", "Usuarios")">Registrate aquí</a>
        </p>
    </section>
</div>